<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionDetailsActivity"
    android:id="@+id/root_layout">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="start"
                android:text="Question:"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btn_edit_question"
                android:onClick="edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="4dp"
                android:background="@color/purple_700"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_edit_24" />

            <ImageButton
                android:id="@+id/btn_change_question"
                android:onClick="change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="4dp"
                android:background="@color/purple_700"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_check_24"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/btn_cancel_change_question"
                android:onClick="cancelChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="4dp"
                android:background="@color/purple_700"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_cancel_24"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_que_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="hello"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_question"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="type the changed question..."
            android:padding="8dp"
            android:textSize="20sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/img_que_photo"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="240dp" />

        <Button
            android:id="@+id/btn_upload_photo"
            android:onClick="selectPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="24dp"
            android:drawableLeft="@drawable/ic_baseline_linked_camera_24"
            android:text="Capture / Upload Photo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="start"
                android:text="Answer:"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btn_edit_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="4dp"
                android:background="@color/purple_700"
                android:onClick="edit"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_edit_24" />

            <ImageButton
                android:id="@+id/btn_change_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="4dp"
                android:background="@color/purple_700"
                android:onClick="change"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_check_24"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/btn_cancel_change_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="4dp"
                android:background="@color/purple_700"
                android:onClick="cancelChange"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_cancel_24"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="type your answer here..."
            android:padding="8dp"
            android:textSize="20sp"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>